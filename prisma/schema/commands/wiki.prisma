model Wiki {
  wiki_id           BigInt  @id @default(autoincrement())
  wiki_name         String
  wiki_url          String
  wiki_script_path  String?
  wiki_article_path String?
  guild_id          BigInt
  guild             Guild   @relation(fields: [guild_id], references: [guild_id])

  @@unique([wiki_id, guild_id])
  @@index([wiki_id, guild_id])
}

model WikiBlockItem {
  wiki_block_id BigInt @id @default(autoincrement()) // Add this so multiple entries allowed
  wiki_name     String // ‚Üê Block by name
  guild_id      BigInt
  guild         Guild  @relation(fields: [guild_id], references: [guild_id])

  @@unique([wiki_name, guild_id]) // Important for lookup
  @@index([wiki_name, guild_id])
}
